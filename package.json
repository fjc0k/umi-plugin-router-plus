{
  "name": "umi-plugin-router-plus",
  "version": "0.0.1",
  "description": "为 Umi 带来增强的路由体验。",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/fjc0k/umi-plugin-router-plus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:fjc0k/umi-plugin-router-plus.git"
  },
  "bugs": {
    "url": "https://github.com/fjc0k/umi-plugin-router-plus/issues"
  },
  "keywords": [
    "umi",
    "umi3",
    "umi-plugin",
    "router"
  ],
  "files": [
    "lib"
  ],
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "scripts": {
    "dev": "rimraf lib && tsc -w",
    "build": "rimraf lib && tsc",
    "test": "jest --coverage",
    "release": "npm run test && standard-version -a && npm run build && git push --follow-tags origin master && npm publish"
  },
  "eslintConfig": {
    "root": true,
    "extends": "io"
  },
  "eslintIgnore": [
    "node_modules",
    "lib",
    "__snapshots__",
    "*.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "snapshotSerializers": [
      "jest-snapshot-serializer-function-name"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/__*__/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-io": "^0.8.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "lint-staged": "^10.0.8",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "umi": "^3.0.5"
  },
  "dependencies": {
    "vtils": "^2.57.0"
  },
  "peerDependencies": {
    "umi": "^3"
  }
}
